<div class="comparison-container" style="display: flex">
    <div @onclick="CloseComparison">
        <a href="javascript:void(0);">&#60; Back</a>
    </div>
    <img src="@BeatmapSet.Covers.Cover" alt="Beatmap image for @BeatmapSet.Title"/>
    <h2>@BeatmapSet.Title - @Beatmap.DiffName (@Beatmap.Difficulty*)</h2>
    <div class="scores" style="display: inline-flex">
        <ScoreComparisonDisplay User="User1" Score="UserScore1" ComparisonScore="UserScore2"/>
        <ScoreComparisonDisplay User="User2" Score="UserScore2" ComparisonScore="UserScore1"/>
    </div>
</div>